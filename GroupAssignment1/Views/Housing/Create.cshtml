@{
    ViewData["Title"] = "Create new Listing";
}
@model Housing

<link rel="stylesheet" href="/css/_Button.css" type="text/css" />

<div class="text-center mt-4 mb-4">
    <h2>@ViewData["Title"]</h2>
</div>
<div class="container">
    <form asp-action="Create">
        <div class="form-group mt-4 mb-4">
            <label asp-for="Name"></label><span class="text-danger">*</span>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="Location"></label><span class="text-danger">*</span>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="Including">Included (Example "6 guests - 3 bedrooms - 3 beds 2 - baths")</label><span class="text-danger">*</span>
            <input asp-for="Including" class="form-control" />
            <span asp-validation-for="Including" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="Rent"></label><span class="text-danger">*</span>
            <input asp-for="Rent" class="form-control" />
            <span asp-validation-for="Rent" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="Description"></label><span class="text-danger">*</span>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="StartDate">Start Date:</label><span class="text-danger">*</span>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="EndDate">End Date:</label><span class="text-danger">*</span>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 mb-4">
            <label asp-for="ImageUrl"></label><span class="text-danger">*</span>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-default-small">Create</button>
        <a asp-action="Table" class="btn-dark-small">Go Back</a>
    </form>
</div>