
@model Housing

<h2>Create new Listing</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label><span class="text-danger">*</span>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rent"></label><span class="text-danger">*</span>
        <input asp-for="Rent" class="form-control" />
        <span asp-validation-for="Rent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label><span class="text-danger">*</span>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date:</label><span class="text-danger">*</span>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date:</label><span class="text-danger">*</span>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label><span class="text-danger">*</span>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Table" class="btn btn-secondary">Go Back</a>
</form>