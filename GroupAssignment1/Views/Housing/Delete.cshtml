@{
    ViewData["Title"] = "Delete current Listing";
}
@model Housing

<link rel="stylesheet" href="/css/_Button.css" type="text/css" />

<div class="text-center mt-4 mb-4">
    <h2>@ViewData["Title"]</h2>
    <h3>Are you sure you want to delete this housing?</h3>
</div>


<div class="container">
    <h4>Current Housing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mt-4 mb-4">Housing Id</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.HousingId</dd>

        <dt class="col-sm-2 mt-4 mb-4">Name</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.Name</dd>

        <dt class="col-sm-2 mt-4 mb-4">Rent</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.Rent</dd>

        <dt class="col-sm-2 mt-4 mb-4">Description</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.Description</dd>

        <dt class="col-sm-2 mt-4 mb-4">Image URL</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.ImageUrl</dd>

        <dt class="col-sm-2 mt-4 mb-4">Start Date</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.StartDate.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2 mt-4 mb-4">End Date</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.EndDate.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2 mt-4 mb-4">Location</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.Location</dd>

        <dt class="col-sm-2 mt-4 mb-4">Including</dt>
        <dd class="col-sm-10 mt-4 mb-4">@Model.Including</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.HousingId" method="post">
        <button type="submit" class="btn-default-small">Delete</button>
        <a asp-action="Table" class="btn-dark-small">Cancel</a>
    </form>
</div>