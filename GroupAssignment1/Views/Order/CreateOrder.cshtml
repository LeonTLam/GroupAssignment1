@using GroupAssignment1.Areas.Identity.Data;
@using GroupAssignment1.ViewModels;
@using GroupAssignment1.DAL;
@{
    ViewData["Title"] = "Create new Order";
}
@model Order

<link rel="stylesheet" href="/css/_Button.css" type="text/css" />

<div class="text-center mt-4 mb-4">
    <h1>@ViewData["Title"]</h1>
</div>


@if (ViewData["Housing"] is Housing housing)
{
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div asp-validation-summary="All" class="text-damger"></div>
                <form asp-action="CreateOrder">
                    <div class="form-group mt-4 mb-4">
                        <label asp-for="@Model.StartDate"></label><span class="text-danger">*</span>
                        <input type="date" min="@housing.StartDate.ToString("dd-MM-yyyy")" max="@housing.EndDate.ToString("yyyy-MM-dd")" asp-for="@Model.StartDate" value="@housing.StartDate.ToString("yyyy-MM-dd")" class="form-control form-control-lg" />
                        <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 mb-4">
                        <label asp-for="@Model.EndDate"></label><span class="text-danger">*</span>
                        <input type="date" min="@housing.StartDate.ToString("dd-MM-yyyy")" max="@housing.EndDate.ToString("yyyy-MM-dd")" asp-for="@Model.EndDate" value="@housing.EndDate.ToString("yyyy-MM-dd")" class="form-control form-control-lg" />
                        <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 mb-4">
                        <label asp-for="@Model.HousingId" class="form-label"></label>
                        <input asp-for="@Model.HousingId" value="@housing.HousingId" readonly class="form-control form-control-lg" />
                        <span asp-validation-for="@Model.HousingId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn-default-small">Create</button>
                    <a asp-controller="Housing" asp-action="Details" asp-route-id="@housing.HousingId" class="btn-dark-small">Back to Details</a>
                </form>
            </div>
            <div class="col-sm d-flex justify-content-center">
                <div class="card" style="max-width: 320px; margin-bottom:25px;">
                    <img class="card-img-top" src="@housing.ImageUrl" style="max-height:190px;" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@housing.Name</h5>
                        <h6 class="card-text">@housing.Location</h6>
                        <p class?="card-text">@housing.Including</p>
                        <p class="card-text">@housing.Rent NOK/night </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}


