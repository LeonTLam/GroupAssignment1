@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LAMRentals</title>
    <link rel="shortcut icon " href="/logo.ico" type="image/x-icon"/>
    <link rel="stylesheet" href="/css/_Layout.css" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home">LAMRentals</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <img src="/images/layout/burgerIcon.png" alt="navbar toggler" id="toggler" />
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Housing" asp-action="Table">Housings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="About" asp-action="Index">About us</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ApplicationUser" asp-action="Table">Users</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="Table">Orders</a>
                            </li>
                        }
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>
        
<footer class="text-center text-white" style="background-color: #395C6B;">

    <div class="w-auto">
  
        <section class="mt-5">
      
            <div class="row text-center d-flex justify-content-center pt-5">

                <div class="col-md-2">
                    <h6 class="text-uppercase font-weight-bold">
                        <a class="nav-footer" asp-controller="Home" asp-action="Index">Home</a>
                    </h6>
                </div>

                <div class="col-md-2">
                    <h6 class="text-uppercase font-weight-bold">
                        <a class="nav-footer" asp-controller="Housing" asp-action="Table">Housings</a>
                    </h6>
                </div>

                <div class="col-md-2">
                    <h6 class="text-uppercase font-weight-bold">
                        <a class="nav-footer" asp-controller="About" asp-action="Index">About Us</a>
                    </h6>
                </div>

                <div class="col-md-2">
                    <h6 class="text-uppercase font-weight-bold">
                        <a class="nav-footer" asp-controller="Contact" asp-action="Index">Contact Us</a>
                    </h6>
                </div>

            </div>
        </section>
        <hr class="my-5" />
        <section class="mb-5">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt
                        distinctio earum repellat quaerat voluptatibus placeat nam,
                        commodi optio pariatur est quia magnam eum harum corrupti
                        dicta, aliquam sequi voluptate quas.
                    </p>
                </div>
            </div>
        </section>
        
    </div>
    <div class="text-center p-3"
            style="background-color: rgba(0, 0, 0, 0.2)">
        © 2020 Copyright:
        <a class="text-white" href="#">GroupAssignment1</a>
    </div>
</footer>
     
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

