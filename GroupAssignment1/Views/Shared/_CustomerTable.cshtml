@model IEnumerable<Customer>

    <div class="container">
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>FName</th>
                <th>LName</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Housings</th>
                <th>Orders</th>
                <th>Actions</th>
            </tr>
            @foreach (var customer in Model)
            {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>
                    @if (customer.OwnedHousings != null)
                    {
                        <p>@string.Join(", ", customer.OwnedHousings.Select(housing => $"Housing{housing.HousingId}"))</p>
                    }
                </td>
                <td>
                    @if (customer.Orders != null)
                    {
                        <p>@string.Join(", ", customer.Orders.Select(order => $"Order{order.OrderId}"))</p>
                    }
                </td>
                <td></td>
            </tr>
        }
        </table>
    </div>